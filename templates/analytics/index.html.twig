{% extends 'base.html.twig' %}

{% block title %}Analytics{% endblock %}
{% block page_title %}Analytics{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/DASHBOARD/analytics.css') }}">
{% endblock %}

{% block body %}
    <!-- Page Header -->
    <div class="page-header">
        <h1>Analytics Dashboard</h1>
        <p>Monitor your business performance and key metrics</p>
    </div>

    <!-- Filter Bar -->
    <div class="filter-bar">
        <button class="filter-button active">Today</button>
        <button class="filter-button">Last 7 Days</button>
        <button class="filter-button">Last 30 Days</button>
        <button class="filter-button">Last 3 Months</button>
        <button class="filter-button">This Year</button>
    </div>

    <!-- Stats Overview -->
    <div class="stats-overview">
        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">Total Revenue</span>
                <span class="stat-trend up">↑ 15%</span>
            </div>
            <div class="stat-value">$45,231</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">New Orders</span>
                <span class="stat-trend up">↑ 8%</span>
            </div>
            <div class="stat-value">127</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">Active Clients</span>
                <span class="stat-trend up">↑ 23%</span>
            </div>
            <div class="stat-value">89</div>
        </div>

        <div class="stat-card">
            <div class="stat-header">
                <span class="stat-label">Conversion Rate</span>
                <span class="stat-trend down">↓ 3%</span>
            </div>
            <div class="stat-value">68%</div>
        </div>
    </div>

    <!-- Full Width Chart -->
    <div class="full-chart">
        <h3>Revenue Overview</h3>
        <div class="chart-placeholder">
            Revenue Chart - Integrate with Chart.js or similar library
        </div>
    </div>

    <!-- Charts Grid -->
    <div class="charts-grid">
        <div class="chart-card">
            <h3>Orders by Status</h3>
            <div class="chart-placeholder">
                Pie/Donut Chart
            </div>
        </div>

        <div class="chart-card">
            <h3>Top Services</h3>
            <div class="chart-placeholder">
                Bar Chart
            </div>
        </div>

        <div class="chart-card">
            <h3>Client Growth</h3>
            <div class="chart-placeholder">
                Line Chart
            </div>
        </div>

        <div class="chart-card">
            <h3>Monthly Revenue</h3>
            <div class="chart-placeholder">
                Area Chart
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="activity-section">
        <h3>Recent Activity</h3>
        <div class="activity-list">
            <div class="activity-item">
                <div class="activity-icon">O</div>
                <div class="activity-content">
                    <div class="activity-title">New order received from John Doe</div>
                    <div class="activity-time">2 minutes ago</div>
                </div>
            </div>

            <div class="activity-item">
                <div <div class="activity-icon">C</div>
                <div class="activity-content">
                    <div class="activity-title">New client registered: ABC Company</div>
                    <div class="activity-time">15 minutes ago</div>
                </div>
            </div>

            <div class="activity-item">
                <div class="activity-icon">S</div>
                <div class="activity-content">
                    <div class="activity-title">Service completed: Website Redesign</div>
                    <div class="activity-time">1 hour ago</div>
                </div>
            </div>

            <div class="activity-item">
                <div class="activity-icon">P</div>
                <div class="activity-content">
                    <div class="activity-title">Payment received: $2,500</div>
                    <div class="activity-time">3 hours ago</div>
                </div>
            </div>

            <div class="activity-item">
                <div class="activity-icon">R</div>
                <div class="activity-content">
                    <div class="activity-title">Monthly report generated</div>
                    <div class="activity-time">5 hours ago</div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
