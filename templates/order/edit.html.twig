{% extends 'base.html.twig' %}

{% block title %}Edit Order{% endblock %}
{% block page_title %}Edit Order{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/edit_order.css') }}">
{% endblock %}

{% block body %}
<div class="ml-64 mt-15 p-10">
    <div class="max-w-7xl mx-auto">
        <!-- Page Header -->
        <div class="mb-10">
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Order</h1>
            <p class="text-gray-500">Update the order details below</p>
        </div>

        <!-- Form Container -->
        <div class="form-container">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                {{ form_widget(form) }}

                <!-- Form Actions -->
                <div class="form-actions">
                    <!-- Update Button -->
                    <button type="submit" class="btn btn-update">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Update Order
                    </button>

                    <!-- Back Link -->
                    <a href="{{ path('app_order_index') }}" class="btn btn-back">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                        </svg>
                        Back to Orders
                    </a>

                    <!-- Delete Button -->
                    <form method="post" 
                          action="{{ path('app_order_delete', {'id': order.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this order?');"
                          class="inline-form">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                        <button type="submit" class="btn btn-delete">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            Delete Order
                        </button>
                    </form>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
