{% extends 'base.html.twig' %}

{% block title %}{% if order.id %}Edit Order{% else %}New Order{% endif %}{% endblock %}
{% block page_title %}{% if order.id %}Edit Order{% else %}Create Order{% endif %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/order-new.css') }}">
{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>{% if order.id %}Edit Order{% else %}Create New Order{% endif %}</h1>
        <p>{% if order.id %}Update the order details below{% else %}Add a new order to your system{% endif %}</p>
    </div>

    <div class="form-container">
        {{ form_start(form, {'attr': {'class': 'order-form'}}) }}
            {{ form_widget(form) }}

            <div class="form-actions">
                <a href="{{ path('app_order_index') }}" class="back-link">
                    <span class="back-icon">‚Üê</span> Cancel
                </a>
                <button type="submit" class="btn-submit">
                    {% if order.id %}Update Order{% else %}Create Order{% endif %}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
