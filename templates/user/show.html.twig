{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}
{% block page_title %}Client Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/CLIENT/client-show.css') }}">
{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Client Details</h1>
    <p>View client information below</p>
</div>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ client.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ client.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ client.email }}</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>{{ client.phone }}</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>{{ client.address }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ client.status }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
    </tbody>
</table>

<div class="form-actions">
    <a href="{{ path('app_client_index') }}" class="btn btn-back">
        ‚Üê Back to List
    </a>

    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-edit">
        Edit Client
    </a>

    <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}"
          onsubmit="return confirm('Are you sure you want to delete this client?');"
          style="display:inline-block; margin-left: 10px;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
        <button type="submit" class="btn btn-delete">Delete</button>
    </form>
</div>
{% endblock %}
