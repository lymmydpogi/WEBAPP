{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}
{% block page_title %}Services{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css"/>
    <!-- Custom Services CSS -->
    <link rel="stylesheet" href="{{ asset('style/css/SERVICE/service.css') }}">
{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section">
    <h1>Service Management Dashboard</h1>
    <p>Manage your services, pricing, delivery times, and availability all in one place.</p>
</section>

<!-- Services Table -->
<section class="service-table-section">
    <h2 class="section-title">All Services</h2>
    <div class="table-container">
        <table class="table" id="servicesTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price (₱)</th>
                    <th>Status</th>
                    <th>Pricing Model</th>
                    <th>Pricing Unit</th>
                    <th>Delivery Time</th>
                    <th>Category</th>
                    <th>Tools Used</th>
                    <th>Revision Limit</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if services|length > 0 %}
                    {% for service in services %}
                        <tr>
                            <td>{{ service.id }}</td>
                            <td>{{ service.name }}</td>
                            <td>{{ service.description }}</td>
                            <td>₱{{ service.price|number_format(2, '.', ',') }}</td>
                            <td>{{ service.status }}</td>
                            <td>{{ service.pricingModel }}</td>
                            <td>{{ service.pricingUnit }}</td>
                            <td>{{ service.deliveryTime }} days</td>
                            <td>{{ service.category }}</td>
                            <td>{{ service.toolsUsed }}</td>
                            <td>{{ service.revisionLimit }}</td>
                            <td>
                                <a href="{{ path('app_services_show', {'id': service.id}) }}">Show</a>
                                <a href="{{ path('app_services_edit', {'id': service.id}) }}">Edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="12" class="empty-state">No services found.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>

    <div class="button-container">
        <a href="{{ path('app_services_new') }}" class="btn-create">
            <span>+</span> Create New Service
        </a>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    {% if services|length > 0 %}
        <script>
            $(document).ready(function() {
                $('#servicesTable').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true,
                    info: true,
                    pageLength: 10,
                    lengthMenu: [5, 10, 20, 50],
                    order: [[0, 'desc']],
                    columnDefs: [
                        { orderable: false, targets: -1 } // Actions column
                    ],
                    language: {
                        search: "Search:",
                        lengthMenu: "Show _MENU_ entries",
                        info: "Showing _START_ to _END_ of _TOTAL_ services",
                        infoEmpty: "Showing 0 to 0 of 0 services",
                        infoFiltered: "(filtered from _MAX_ total services)",
                        paginate: {
                            first: "First",
                            last: "Last",
                            next: "Next",
                            previous: "Previous"
                        }
                    }
                });
            });
        </script>
    {% endif %}
{% endblock %}
