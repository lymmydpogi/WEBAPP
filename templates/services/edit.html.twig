{% extends 'base.html.twig' %}

{% block title %}Edit Service{% endblock %}
{% block page_title %}Edit Service{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/service-edit.css') }}">
{% endblock %}

{% block body %}
<div class="page-header">
    <h1>Edit Service</h1>
    <p>Update the service details below</p>
</div>

<div class="form-container">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-actions">
            <!-- Back Link -->
            <a href="{{ path('app_services_index') }}" class="back-link">
                ‚Üê Back to List
            </a>

            <!-- Update Button -->
            <button type="submit" class="btn btn-update">
                Update
            </button>

            <!-- Delete Button -->
            <form method="post" action="{{ path('app_services_delete', {'id': service.id}) }}" style="display:inline-block; margin-left: 10px;" onsubmit="return confirm('Are you sure you want to delete this service?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ service.id) }}">
                <button type="submit" class="btn btn-delete">
                    Delete
                </button>
            </form>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
