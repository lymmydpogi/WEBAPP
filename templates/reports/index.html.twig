{% extends 'base.html.twig' %}

{% block title %}Reports{% endblock %}
{% block page_title %}Reports{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('style/css/DASHBOARD/reports.css') }}">
{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <h1>Reports Dashboard</h1>
        <p>Generate and review summary reports of clients, orders, and services performance.</p>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <h2 class="section-title">Overview</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value">{{ total_clients }}</div>
                <div class="stat-label">Total Clients</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">{{ total_orders }}</div>
                <div class="stat-label">Total Orders</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">{{ active_services }}</div>
                <div class="stat-label">Active Services</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">â‚±{{ total_revenue|number_format(2, '.', ',') }}</div>
                <div class="stat-label">Total Revenue</div>
            </div>
        </div>
    </section>

    <!-- Detailed Reports Section -->
    <section class="features-section">
        <h2 class="section-title">Detailed Reports</h2>
        <div class="features-grid">
            <div class="feature-card">
                <h3>Client Report</h3>
                <p>Summary of all registered clients, including contact info and registration dates.</p>
                <a href="#" class="btn-primary">Download CSV</a>
            </div>
            <div class="feature-card">
                <h3>Order Report</h3>
                <p>Overview of completed and pending orders with transaction totals.</p>
                <a href="#" class="btn-primary">Download PDF</a>
            </div>
            <div class="feature-card">
                <h3>Service Report</h3>
                <p>Tracks service demand, average pricing, and top-performing types.</p>
                <a href="#" class="btn-primary">Export Excel</a>
            </div>
            <div class="feature-card">
                <h3>Monthly Summary</h3>
                <p>View monthly sales and performance metrics visually.</p>
                <a href="#" class="btn-primary">View Chart</a>
            </div>
        </div>
    </section>

    <!-- Quick Actions Section -->
    <section class="quick-actions">
        <h2 class="section-title">Quick Actions</h2>
        <div class="actions-grid">
            <a href="#" class="action-button">Generate New Report</a>
            <a href="#" class="action-button">Export All Data</a>
            <a href="#" class="action-button">Email Summary</a>
            <a href="#" class="action-button">Archive Reports</a>
        </div>
    </section>
{% endblock %}
